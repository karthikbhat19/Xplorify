<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.xplorify">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".Booking_History"></activity>
        <activity android:name=".Available_transports" />
        <activity android:name=".User_details" />
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Booked" />
        <activity android:name=".OTP" />
        <activity android:name=".Payment" />
        <activity android:name=".TicketBooking" />
        <activity android:name=".Search" />
        <activity android:name=".SignUp" />
        <activity android:name=".Login" />
    </application>

</manifest>